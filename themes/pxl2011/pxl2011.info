; ----- / BASIC INFO / -----

name = 'pxl2011'
description = 'Theme for pixelcollider.dk'
core = '7.x'
engine = 'phptemplate'
screenshot = 'screenshot.png'
base theme = 'omega'

; ---- / REQUIRED REGIONS / -----

regions[page_top] = "Page Top"
regions[page_bottom] = "Page Bottom"
regions[content] = "Content"


; ----- / CUSTOM REGIONS / -----

regions[menu] = Menu
regions[branding] = Branding
regions[search] = Search
regions[breadcrumb] = Breadcrumb
regions[preface_first] = Preface First
regions[preface_second] = Preface Second
regions[preface_third] = Preface Third
regions[sidebar_first] = Sidebar First
regions[sidebar_second] = Sidebar Second
regions[postscript_first] = Postscript First
regions[postscript_second] = Postscript Second
regions[postscript_third] = Postscript Third
regions[postscript_fourth] = Postscript Fourth
regions[footer] = Footer


; ----- / ZONES / -----

zones[header] = Header
zones[content] = Content
zones[footer] = Footer
zones[menu] = Menu
zones[preface] = Preface
zones[postscript] = Postscript


; ----- / CSS / -----

stylesheets[all][] = css/pxl.base.css


; ----- / OPTIONAL CSS / -----

css[pxl.2011.css][name] = 'Your custom global styles'
css[pxl.2011.css][description] = 'This file holds the custom typography for your theme.'
css[pxl.2011.css][options][weight] = '10'

; ----- / SCRIPTS / -----
scripts[] = js/bootstrap-alerts.js
scripts[] = js/pxl.common.js


